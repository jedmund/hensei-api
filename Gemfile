  gem 'listen'
  gem 'rubocop'
  gem 'solargraph'
  gem 'spring'
  gem 'spring-commands-rspec'
end

group :test do
  gem 'api_matchers'
  gem 'byebug'
  gem 'database_cleaner'
  gem 'shoulda-matchers'
  gem 'simplecov', require: false
end
